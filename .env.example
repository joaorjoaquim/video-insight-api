# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Option 1: Complete URLs (recommended for production)
DATABASE_URL_WRITE=postgres://user:password@host:port/database
DATABASE_URL_READ=postgres://user:password@host:port/database

# Option 2: Individual database variables (for development)
DB_HOST=localhost
DB_PORT=5432
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=your_database
DB_SSL=false
DB_MAX_CONNECTION=10

# Redis and Cache Configuration
REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Rate Limiting
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# AWS Configuration (optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Application Configuration
APP_NAME=video-insight-api
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
